<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- File appender -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>mcpserver.log</file> <!-- This log file will be created/used in the working directory -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- No console appender (no logs to STDOUT/STDERR) -->
    <root level="DEBUG">
        <appender-ref ref="FILE"/>
    </root>
</configuration>